{
  "name": "timely-world-clock",
  "version": "2.0.0",
  "description": "Your ultimate world clock and timezone companion with real-time updates",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=/",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o dist/css/styles.min.css src/css/styles.css",
    "minify-js": "uglifyjs src/js/*.js -o dist/js/app.min.js",
    "lint": "eslint src/js/**/*.js",
    "test": "jest",
    "serve": "http-server . -p 3000"
  },
  "keywords": ["world clock", "timezone", "time zones", "real-time", "javascript", "modular"],
  "author": "Hafiz Muhammad Abid",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "clean-css-cli": "^5.6.2",
    "uglify-js": "^3.17.4",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "http-server": "^14.1.1"
  },
  "dependencies": {}
}
